<Window x:Class="FicsitExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FicsitExplorer"
        mc:Ignorable="d"
        Title="Ficsit Explorer" Height="450" Width="800">
    <Grid>
        <ListView Name="lvMods">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="Logo" Width="120" DisplayMemberBinding="{Binding Logo}"/>
                    <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Downloads" Width="100" DisplayMemberBinding="{Binding Downloads}"/>
                    <GridViewColumn Header="Description" Width="400" DisplayMemberBinding="{Binding Description}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
